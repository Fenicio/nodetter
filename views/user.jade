h2.page-title="@"+username

-if(account && user && account.username && account.username==user.username)
  h2 ¿Que está ocurriendo?
  form(action='/tweet',method="post")
    textarea(name="tweet").form-control
    input(type="submit", value="Tweet").btn.btn-primary

div.row
  di.list-group
    -for(var i=0;i<tweets.length;i++)
      div(class="list-group-item")
        div.list-group-item-heading
          a(href="/"+tweets[i].username)=tweets[i].username
        p.list-group-item-text=tweets[i].text
          small.pull-right hace #{haceCuanto(tweets[i].date)}
